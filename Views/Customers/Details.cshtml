@model retailMvcDemo.Models.CustomerEntity
@{
    ViewData["Title"] = "Customer Details";
}
<h2>Customer Details</h2>

<table class="table">
    <tr><th>Name</th><td>@Model.FirstName @Model.LastName</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Phone</th><td>@Model.Phone</td></tr>
    <tr><th>City</th><td>@Model.City</td></tr>
    <tr><th>PartitionKey</th><td>@Model.PartitionKey</td></tr>
    <tr><th>RowKey</th><td>@Model.RowKey</td></tr>
    <tr><th>Last Updated</th><td>@Model.Timestamp</td></tr>
</table>

<p>
    <a asp-action="Edit" asp-route-pk="@Model.PartitionKey" asp-route-rk="@Model.RowKey" class="btn btn-primary">Edit</a>
    <a asp-action="Index" asp-route-city="@Model.City" class="btn btn-secondary">Back</a>
</p>
