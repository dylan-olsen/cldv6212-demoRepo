@model retailMvcDemo.Models.ProductEntity
@{
    ViewData["Title"] = "Product Details";
    var cat = Model.PartitionKey?.StartsWith("CATEGORY-") == true
        ? Model.PartitionKey["CATEGORY-".Length..]
        : Model.PartitionKey;
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="ratio ratio-16x9">
                @if (!string.IsNullOrWhiteSpace(Model.ImageBlobUrl))
                {
                    <img src="@Model.ImageBlobUrl" class="img-fluid" alt="@Model.Name" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center">
                        <span class="text-muted">No image</span>
                    </div>
                }
            </div>
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <p class="card-text text-muted">@Model.Description</p>
                }

                <p class="mb-1"><strong>Category:</strong> @cat</p>
                <p class="mb-1"><strong>Price:</strong> R @Model.Price.ToString("0.00")</p>
                <p class="mb-1"><strong>Stock:</strong> @Model.StockQty</p>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="dropstart">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Actions
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Edit", "Products", new { pk = Model.PartitionKey, rk = Model.RowKey })">Edit</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item text-danger" href="@Url.Action("Delete", "Products", new { pk = Model.PartitionKey, rk = Model.RowKey })">Delete</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Products")">Back to List</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
