@model retailMvcDemo.Models.ProductEntity
@{
    ViewData["Title"] = "Edit Product";
}
<h2>Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-3">
    @Html.AntiForgeryToken()

    <!-- keys must travel -->
    <input type="hidden" name="pk" value="@Model.PartitionKey" />
    <input type="hidden" name="rk" value="@Model.RowKey" />
    <input type="hidden" name="existingImageUrl" value="@Model.ImageBlobUrl" />

    <div class="col-md-6">
        <label class="form-label">Name</label>
        <input name="name" class="form-control" value="@Model.Name" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Price</label>
        <input name="price" type="number" step="0.01" class="form-control" value="@Model.Price" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Stock</label>
        <input name="stockQty" type="number" class="form-control" value="@Model.StockQty" />
    </div>

    <div class="col-md-6">
        <label class="form-label">Category (read-only)</label>
        <input class="form-control" value="@Model.PartitionKey" readonly />
    </div>

    <div class="col-md-6">
        <label class="form-label">SKU/ID (read-only)</label>
        <input class="form-control" value="@Model.RowKey" readonly />
    </div>

    <div class="col-12">
        <label class="form-label">Replace Image (optional)</label>
        <input type="file" name="newImageFile" class="form-control" />
        @if (!string.IsNullOrWhiteSpace(Model.ImageBlobUrl))
        {
            <div class="form-text">Current image shown below; uploading a new one will replace it.</div>
            <img src="@Model.ImageBlobUrl" alt="img" style="max-height:120px;width:auto;margin-top:8px;border-radius:6px;" />
        }
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
