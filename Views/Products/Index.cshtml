@model IEnumerable<retailMvcDemo.Models.ProductEntity>
@{
    ViewData["Title"] = "Products";
    string CategoryFromPk(string pk) =>
        pk != null && pk.StartsWith("CATEGORY-") ? pk.Substring("CATEGORY-".Length) : pk ?? "";
}

<h2>Products</h2>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success">Create New</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th style="width:72px;">Image</th>
            <th>Name</th>
            <th>Category</th>
            <th class="text-end">Price</th>
            <th class="text-end">Stock</th>
            <th>PK</th>
            <th>RK</th>
            <th style="width:200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrWhiteSpace(p.ImageBlobUrl))
                    {
                        <img src="@p.ImageBlobUrl" alt="img" style="height:48px;width:auto;border-radius:4px;" />
                    }
                </td>
                <td>@p.Name</td>
                <td>@CategoryFromPk(p.PartitionKey)</td>
                <td class="text-end">@p.Price.ToString("0.00")</td>
                <td class="text-end">@p.StockQty</td>
                <td>@p.PartitionKey</td>
                <td>@p.RowKey</td>
                <td>
                    <a asp-action="Details" asp-route-pk="@p.PartitionKey" asp-route-rk="@p.RowKey" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-action="Edit" asp-route-pk="@p.PartitionKey" asp-route-rk="@p.RowKey" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-pk="@p.PartitionKey" asp-route-rk="@p.RowKey" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

