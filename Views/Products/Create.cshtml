@{
    ViewData["Title"] = "Create Product";
    // Predefined categories — update/extend this list as needed
    var categories = new[] { "GROCERY", "PRODUCE", "ELECTRONICS", "CLOTHING", "OTHER" };
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@* Show any validation messages (e.g., duplicate name) *@
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form asp-action="Create" method="post" enctype="multipart/form-data" class="card p-3 shadow-sm">
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label" for="category">Category</label>
            <select class="form-select" id="category" name="category">
                <option value="">-- Select a Category --</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat" selected="@(ViewBag.Category?.ToString().ToUpper() == cat)">
                        @cat
                    </option>
                }
            </select>
        </div>

        <div class="col-md-8">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name"
                   value="@(ViewBag.Name ?? "")" placeholder="e.g. Bread" />
            @* field-level error for duplicate/required name *@
            <span class="text-danger">
                @ViewData.ModelState["name"]?.Errors.FirstOrDefault()?.ErrorMessage
            </span>
        </div>

        <div class="col-md-4">
            <label class="form-label" for="price">Price</label>
            <input class="form-control" type="number" id="price" name="price" step="0.01" min="0"
                   value="@(ViewBag.Price ?? "")" />
        </div>

        <div class="col-md-4">
            <label class="form-label" for="stockQty">Stock Quantity</label>
            <input class="form-control" type="number" id="stockQty" name="stockQty" min="0"
                   value="@(ViewBag.StockQty ?? "")" />
        </div>

        <div class="col-md-4">
            <label class="form-label" for="imageFile">Image (optional)</label>
            <input class="form-control" type="file" id="imageFile" name="imageFile" />
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
