@model retailMvcDemo.Models.OrderEntity
@{
    ViewData["Title"] = "Edit Order";
}
<h2>Edit Order</h2>

<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="pk" value="@Model.PartitionKey" />
    <input type="hidden" name="rk" value="@Model.RowKey" />

    <div class="col-md-12">
        <label class="form-label">Items JSON</label>
        <textarea name="itemsJson" class="form-control" rows="8">@Model.ItemsJson</textarea>
    </div>

    <div class="col-md-3">
        <label class="form-label">Total</label>
        <input name="total" type="number" step="0.01" class="form-control" value="@Model.Total" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Status</label>
        <select name="status" class="form-select">
            @{
                var statuses = new[] { "Pending", "Processing", "Completed", "Cancelled" };
            }
            @foreach (var s in statuses)
            {
                <option value="@s" selected="@(Model.Status == s)">@s</option>
            }
        </select>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-route-customerId="@Model.CustomerId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
